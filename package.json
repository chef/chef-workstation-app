{
  "name": "chef-workstation-app",
  "productName": "Chef Workstation App",
  "displayName": "Chef Workstation",
  "version": "0.0.21",
  "description": "Desktop application for Chef Workstation.",
  "repository": "https://github.com/chef/chef-workstation-tray",
  "author": {
    "name": "Chef Software, Inc.",
    "email": "beta@chef.io",
    "url": "https://chef.sh"
  },
  "license": "Apache-2.0",
  "main": "main.js",
  "engines": {
    "node": "~10.0"
  },
  "scripts": {
    "start": "electron .",
    "build-all": "build --win --mac --linux --publish never",
    "build-mac": "build --mac --publish never",
    "build-linux": "build --linux --publish never",
    "build-win": "build --win --publish never",
    "test": "xvfb-maybe mocha test --full-stack"
  },
  "build": {
    "appId": "sh.chef.chef-workstation",
    "electronUpdaterCompatibility": ">= 2.16",
    "mac": {
      "target": [
        "dir"
      ],
      "category": "public.app-category.developer-tools",
      "icon": "assets/images/logo.png",
      "extendInfo": {
        "LSUIElement": 1
      }
    },
    "win": {
      "target": [
        "dir"
      ],
      "icon": "assets/images/logo.ico"
    },
    "publish": [
      {
        "provider": "github"
      }
    ],
    "linux": {
      "target": [
        "dir"
      ]
    },
    "appImage": {
      "systemIntegration": "doNotAsk"
    },
    "dmg": {
      "title": "chef-workstation"
    }
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "electron": "^2.0.8",
    "electron-builder": "20.28.1",
    "electron-reload": "^1.2.5",
    "mocha": "^5.2.0",
    "spectron": "^4.0.0",
    "xvfb-maybe": "^0.2.1"
  },
  "dependencies": {
    "electron-is": "^3.0.0",
    "electron-osx-appearance": "^0.1.1",
    "electron-updater": "3.1.1",
    "node-powershell": "^3.3.1"
  }
}
